<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="paperformat_branch_report" model="report.paperformat">
		<field name="name">employee Report Paperformat</field>
		<field name="default" eval="False"/>
		<field name="format">A4</field>
		<field name="orientation">Portrait</field>
		<field name="margin_top" eval="15"/>
		<field name="margin_bottom" eval="20"/>
		<field name="margin_left" eval="7"/>
		<field name="margin_right" eval="7"/>
		<field name="header_spacing" eval="15"/>
		<field name="dpi">90</field> 
	</record>

    <!--    Report Function -->
    <record id="action_tvc_report" model="ir.actions.report">
        <field name="name">تقرير حاسبة الأجازات</field>
        <field name="model">vacation.calculation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">endservice_vacation_calculation.tvc_report_templates</field>
        <field name="report_file">endservice_vacation_calculation.tvc_report_templates</field>
        <field name="print_report_name">'%s - حاسبة الأجازات' % (object.number)</field>
        <field name="binding_model_id" ref="model_vacation_calculation"/>
    </record>
	<record id="action_employee_report_settlement" model="ir.actions.report">
		<field name="name">تقرير نهاية الخدمه</field>
		<field name="model">vacation.calculation</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">endservice_vacation_calculation.employee_report_pdf_template</field>
		<field name="report_file">endservice_vacation_calculation.employee_report_pdf_template</field>
		<field name="binding_model_id" ref="model_vacation_calculation"/>
		<field name="binding_type">report</field>
		<field name="paperformat_id" ref="paperformat_branch_report"/> <!-- Reference the custom paper format -->
	</record>

</odoo>
