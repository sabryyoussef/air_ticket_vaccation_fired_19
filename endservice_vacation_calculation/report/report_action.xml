<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="paperformat_branch_report" model="report.paperformat">
            <field name="name">employee Report Paperformat</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top" eval="20"/>
            <field name="margin_bottom" eval="20"/>
            <field name="margin_left" eval="7"/>
            <field name="margin_right" eval="7"/>
            <field name="header_spacing" eval="20"/>
            <field name="dpi">90</field>
        </record>

        <!-- Define the report action with the custom paper format -->
        <record id="action_employee_report_settlement" model="ir.actions.report">
            <field name="name">Employee Report settlement</field>
            <field name="model">employee.wizard.settlement</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">endservice_employee_settlement_report.employee_report_pdf_template</field>
            <field name="report_file">endservice_employee_settlement_report.employee_report_pdf_template</field>
            <field name="binding_model_id" ref="model_employee_wizard_settlement"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_branch_report"/> <!-- Reference the custom paper format -->
        </record>
    </data>




</odoo>



