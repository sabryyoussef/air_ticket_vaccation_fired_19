<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vacation_calculation_form" model="ir.ui.view">
        <field name="name">vacation.calculation.form</field>
        <field name="model">vacation.calculation</field>
        <field name="arch" type="xml">
            <form string="Vacation Calculation">
				<header>
					<button string="الموافقة علي الاحتساب" type="object" name="calc_approve"
							class="oe_highlight"
							invisible="state not in 'draft'"/>
					<button string="الموافقة المالية" type="object" name="financial_approve"
							class="oe_highlight"
							invisible="state not in 'f_approve'"/>
					<button string="الترحيل للمالية" type="object" name="post_journal"
							class="oe_highlight"
							invisible="state not in 's_approved'"/>

					<field name="state" widget="statusbar" statusbar_visible="draft,f_approve,s_approved,post"/>

				</header>
				<sheet>
					<div class="oe_title">
						<label for="employee_id" class="oe_edit_only"/>
						<h1><field name="employee_id" placeholder="Employee"/></h1>
						<label for="job_id" class="oe_edit_only"/>
						<h1><field name="job_id"/></h1>
						<label for="department_id" class="oe_edit_only"/>
						<h1><field name="department_id"/></h1>
						<label for="employee_code" class="oe_edit_only"/>
						<h1><field name="employee_code"/></h1>
					</div>
					<group>
						<group col="4">
							<field name="number"/>
							<!-- <field name="contract_id" domain="[('employee_id','=',employee_id)]" context="{'default_employee_id': employee_id}"/> --> <!-- Commented out - hr.contract not available in Odoo 19 -->
							<field name="joined_date"/>
							<field name="ev_type"/>
							<field name="company_id" invisible="1"/>
							<field name="currency_id" invisible="1"/>
						</group>
						<group string='Service Period Per Month'>
						
							<field name="last_working_date"/>
							<field name="legal_leave_remaining_balance"/>
							<field name="total_service_days"/>

						</group>
						<group string='EOS Salary'>
						
							<field name="wage"/>
							<field name="hra"/>
							<field name="travel_allowance"/>
							<field name="da"/>
							<field name="meal_allowance"/>
							<field name="medical_allowance"/>
							<field name="other_allowance"/>
							<field name="gosi"/>
							<field name="emp_gosi"/>
							<field name="additional_wage"/>
							<field name="fixed_deduction"/>
							<field name="fixed_gosi"/>
							<field name="total"/>

						</group>
						<group string='EOS Calculation'>
							<field name="number_of_days_lastm"/>
							<field name="vacation_days"/>
							<field name="vacation_days_value"/>
							<field name="totalvb"/>
							<field name="other_al"/>
							<field name="other_dd"/>
							<field name="other_absent"/>
							<field name="gosi_ded"/>
							<field name="end_of_service_topay"/>
							<field name="amount4lm_days"/>

						</group>
						<group string='مستحقات اخري'>
							<field name="tickets_al"/>
							<field name="contract_break_article_77"/>
							<field name="warning_salary_months"/>
						</group>
						<group string='استقطاعات اخري'>
							<field name="period_start"/>
							<field name="period_end"/>
							<field name="social_insurance"/>
							<field name="end_of_service_benefits_received"/>
							<field name="financial_advances_balance"/>
						</group>
						<group string='الاجمالي المستحق العام'>
							<field name="amount_total"/>
						</group>
					</group>
					<group>
						<field name="note"/>

					</group>
				</sheet>
            </form>
        </field>
    </record>
	<record id="view_vacation_calculation_search" model="ir.ui.view">
		<field name="name">vacation.calculation.search</field>
		<field name="model">vacation.calculation</field>
		<field name="arch" type="xml">
			<search string="Search Vacation Calculation">
				<field name="employee_id" string="Employee"/>
				<field name="employee_code" string="Employee Code"/>
			</search>
		</field>
	</record>


    <record id="view_vacation_calculation_tree" model="ir.ui.view">
        <field name="name">vacation.calculation.tree</field>
        <field name="model">vacation.calculation</field>
        <field name="arch" type="xml">
            <list>
                <field name="number"/>
                <field name="employee_id"/>
                <field name="joined_date"/>
                <field name="job_id"/>
                <field name="department_id"/>
				<field name="joined_date"/>
				<field name="ev_type"/>
				<field name="last_working_date"/>
				<field name="amount_total" string="قيمة المبلغ المستحق"/>

                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>


    <record id="action_view_vacation_calculation_form" model="ir.actions.act_window">
        <field name="name">حساب نهاية الخدمه | End Service</field>
        <field name="res_model">vacation.calculation</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_vacation_calculation_root" name="حساب نهاية الخدمه | End Service" sequence="45"
              web_icon="endservice_vacation_calculation,static/description/icon.png"/>

    <menuitem action="action_view_vacation_calculation_form"
              id="menu_vacation_calculation_tree"
              parent="menu_vacation_calculation_root"/>


</odoo>
