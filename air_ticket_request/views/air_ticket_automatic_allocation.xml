<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="air_ticket_automatic_allocation_form" model="ir.ui.view">
        <field name="name">Air Ticket Automatic Allocation form view</field>
        <field name="model">air.ticket.automatic.allocation</field>
        <field name="arch" type="xml">
            <form string="Air Ticket Automatic Allocation">
                <header>
                    <button string="Confirm" name="confirm" type="object"
                           invisible="state != 'new'" class="oe_highlight" groups="hr.group_hr_manager"/>
                    <button string="Set To New" name="action_set_to_new" type="object"
                            invisible="state != 'confirmed'" class="oe_highlight" groups="hr.group_hr_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button type="object" name="open_allocations"
                                icon="fa-arrow-left" class="oe_inline oe_stat_button">
                            <field string="Tickets Allocations" name="count_allocation" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="name"/>
                            <field name="allocate_till_date" required="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1" groups="hr.group_hr_user"/>
                            <field name="confirmed_uid" readonly="1" groups="hr.group_hr_user"/>
                        </group>
                    </group>
                    <notebook colspan="4" groups="hr.group_hr_user">
                        <page string="Balance allocations">
                            <field name="allocation_ids" nolabel="1" readonly="1"/>
                        </page>
                        <page string="Notes">
                            <field name="note" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- list View -->
    <record id="air_ticket_automatic_allocation_list" model="ir.ui.view">
        <field name="name">Air Ticket Automatic Allocation list view</field>
        <field name="model">air.ticket.automatic.allocation</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="allocate_till_date"/>
                <field name="count_allocation"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <!-- <record id="air_ticket_automatic_allocation_search" model="ir.ui.view">
        <field name="name">Air Ticket Automatic Allocation search view</field>
        <field name="model">air.ticket.automatic.allocation</field>
        <field name="arch" type="xml">
            <search string="Search Automatic Allocations">
                <field name="name"/>
                <field name="code"/>
                <field name="state"/>
                <filter string="New" domain="[('state','=','new')]"/>
                <filter string="Confirmed" domain="[('state','=','confirmed')]"/>
            </search>
        </field>
    </record> -->

    <!-- Action -->
    <record id="action_air_ticket_automatic_allocation" model="ir.actions.act_window">
        <field name="name">Air Ticket Automatic Allocation</field>
        <field name="res_model">air.ticket.automatic.allocation</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_air_ticket_automatic_allocation_root"
              name="Air Ticket Automatic Allocations"
               parent="air_ticket_request.menu_air_ticket_request"
              action="action_air_ticket_automatic_allocation"/>
</odoo>
