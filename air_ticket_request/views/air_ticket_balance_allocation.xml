<?xml version="1.0" encoding="utf-8"?>
<odoo>
         <!-- list View -->
    <record id="air_ticket_balance_allocation_list" model="ir.ui.view">
        <field name="name">air.ticket.balance.allocation.list</field>
        <field name="model">air.ticket.balance.allocation</field>
        <field name="arch" type="xml">
            <list string="Air Ticket Balance Allocations" default_order="allocated_date desc">
                <field name="employee_id"/>
                <field name="allocated_balance" sum="Sum"/>
                <field name="allocated_date"/>
                <field name="adjusted_date"/>
                <field name="reason"/>
                <field name="auto_create"/>
                <field name="air_ticket_auto_allocation_id"/>
                <field name="air_ticket_request_id"/>
                <field name="create_uid"/>
                <field name="confirmed_uid"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <!-- Form View -->


 <!-- Form View -->
    <record id="air_ticket_balance_allocation_form" model="ir.ui.view">
        <field name="name">air.ticket.balance.allocation.form</field>
        <field name="model">air.ticket.balance.allocation</field>
        <field name="arch" type="xml">
            <form string="Air Ticket Balance Allocation">
                <header>
                    <button name="confirm" string="Confirm"  invisible="state != 'new'" type="object" class="oe_highlight" groups="hr.group_hr_manager"/>
                    <button name="set_to_draft" string="Set To New" type="object"
                            confirm="Are you sure that you want to Make State is New"
                           invisible="state != 'confirmed'"  />
                            <!-- groups="mowzf_hrms.group_air_ticket_draft_balance" -->
                           
                    <field name="state" widget="statusbar" statusbar_visible="new,confirmed"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True}" required="1"
                               readonly="state != 'confirmed'"/>
                            <label for="allocated_balance"/>
                            <div>
                                <field name="allocated_balance" required="1" 
                                       readonly="state != 'confirmed'" class="oe_inline"/>
                                Months
                            </div>
                            <field name="allocated_date" required="1" 
                                   readonly="state != 'confirmed'"/>
                            <field name="adjusted_date" readonly="1" force_save="1"/>
                            <field name="last_allocation_date" readonly="1" force_save="1"/>
                            <field name="reason" required="1"/>
                        </group>
                        <group>
                            <field name="auto_create" readonly="1" force_save="1"/>
                            <field name="air_ticket_auto_allocation_id" readonly="1" force_save="1"/>
                            <field name="air_ticket_request_id" readonly="1" force_save="1"/>
                            <field name="create_uid" readonly="1" force_save="1"/>
                            <field name="confirmed_uid" readonly="1" force_save="1"/>
                            <field name="by_eos" readonly="1" force_save="1"/>
                            <!-- <field name="eos_id" readonly="1" force_save="1"/> -->
                        </group>
                    </group>

                    <notebook colspan="4">
                            <page string="Notes">
                                <group string="Notes">
                                    <field name="note" nolabel="1" readonly="state != 'confirmed'"/>
                                </group>
                            </page>
                         <page string="Attachments">
                                <group string="Attachments">
                                    <field name="attachment_ids" nolabel="1" readonly="state != 'confirmed'">
                                        <list editable="bottom">
                                            <field name="name" required="1"/>
                                            <field name="file_name" invisible="1"/>
                                            <field name="file" required="1" filename="file_name"/>
                                            <field name="note"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

<record id="action_air_ticket_balance_allocation" model="ir.actions.act_window">
    <field name="name">Air Ticket Balance Allocations</field>
    <field name="res_model">air.ticket.balance.allocation</field>
    <field name="view_mode">list,form</field>
</record>

<!-- <menuitem id="menu_air_ticket_balance_allocation_root"
          name="Air Tickets"
          parent="hr.menu_hr_root"/> -->

<menuitem id="menu_air_ticket_balance_allocation"
          name="Air ticket balance allocation "
          parent="air_ticket_request.menu_air_ticket_request"
          action="action_air_ticket_balance_allocation"/>



</odoo>